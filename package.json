{
  "name": "my-personal-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postbuild": "node scripts/copy-assets.js",
    "clean": "rm -rf .next out node_modules/.cache",
    "build:local": "npm run clean && NODE_ENV=production next build",
    "build:gh-pages": "npm run clean && GH_PAGES=true USE_CUSTOM_DOMAIN=true NODE_ENV=production next build",
    "deploy:auto": "npm run build:gh-pages && git add . && git commit -m 'Build for GitHub Pages' && git push",
    "deploy:manual": "npm run build:gh-pages && npx gh-pages --dist out --dotfiles --nojekyll --message 'Manual deployment' --branch gh-pages",
    "serve:prod": "npm run build:local && npx serve@latest out -p 3000",
    "serve:gh-pages": "npm run build:gh-pages && npx serve@latest out -p 3000"
  },
  "dependencies": {
